@{
    ViewData["Title"] = "Products";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <button class="btn btn-primary">
        <a asp-controller="Product" asp-action="Create">Create</a>
    </button>

    <table class="table">
        <thead>
            <tr>

                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Category</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Category.Name</td>
                    <td>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">Details</a>
                        <a asp-controller="Product" asp-action="Edit">Edit</a>
                        <a asp-controller="Product" asp-action="Delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
